<dl id="test" class="portlet portletSeantisDirEvents"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="seantis.dir.eventsportlet">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="title" i18n:translate=""> Events</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem"
        tal:attributes="data-event-config-url string:${view/export_url};
                        data-event-config-base-url string:${view/data/url}"
        ></dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span>
           <a class="tile" tal:attributes="href view/events_url" i18n:translate="">More</a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>